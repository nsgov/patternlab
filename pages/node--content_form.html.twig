<div class="row">
	<div class="col-xs-6 col-sm-3 col-md-2">
		<label>Document type:</label></div>
		<div class="col-xs-6 col-sm-9 col-md-10">
			<span class="document-type">
				<div id="meta-publication-type">
					{{ content.field_document_category }}
				</div>
			</span>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-sm-3 col-md-2">
			<label>Author:</label>
		</div>
			<div class="col-xs-6 col-sm-9 col-md-10">
				<div id="meta-department">
					{{ content.field_document_author }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-3 col-md-2">
				<label>Last updated</label>
			</div>
			<div class="col-xs-6 col-sm-9 col-md-10">
				<div id="last-updated">
					{{ content.field_file_last_updated }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-3 col-md-2">
				<label>First published:</label>
			</div>
			<div class="col-xs-6 col-sm-9 col-md-10">
				<div id="first-published">
					{{ content.field_date_originally_published }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<div id="introduction">
					{{ content.field_introduction }}
				</div>
				<div class="document-link-container">
					<a href="" type="application/pdf" class="document-link">
						<div class="document-thumbnail-container">
							{{ content.field_document_thumbnail }}
						</div>
						<div class="document-title">
							{{ content.field_friendly_document_name }}
						</div>
					</a>
					<div class="document-details">
						PDF File
						<div class="document-size">
							<span class="document-pages">{{ content.field_number_of_pages }}</span>,
							<span class="document-filesize" title="">XX KB</span>
						</div>
						<p class="accessibility-email">
							This document may not be fully accessible to users of assistive technology.
							<a href="{{ content.field_accessibility_ref }}">Request a different format.</a>
						</p>
					</div>
				</div>
				<div id="body">
					{{ content.field_body }}
				</div>
			</div>
		</div>
